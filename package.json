{
  "name": "redux-await-action",
  "version": "0.0.0-development",
  "description": "Wait for redux actions in react components",
  "author": "bmaximilian",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json --preserveWatchOutput",
    "lint": "eslint . --ext .ts --ext .tsx",
    "test": "jest",
    "test:cov": "npm test -- --coverage",
    "precommit": "lint-staged",
    "docs:generate": "typedoc index.ts --options docs/config/typedoc.json",
    "start": "npm run build -- -w"
  },
  "engines": {
    "node": ">=12"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "contributors": [
    "bmaximilian"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/bmaximilian/redux-await-action.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bmaximilian/redux-await-action/issues"
  },
  "homepage": "https://github.com/bmaximilian/redux-await-action#readme",
  "peerDependencies": {
    "react": ">=16.3",
    "redux": "^4.0.5",
    "react-redux": "^7.2.1"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.2.1",
    "@testing-library/jest-dom": "4.1.2",
    "@types/enzyme": "^3.10.4",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "24.0.19",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-redux": "^7.1.9",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-flowtype": "^4.5.3",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "^23.3.0",
    "eslint-plugin-jsdoc": "^20.0.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prefer-arrow": "^1.1.7",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-tsdoc": "^0.2.1",
    "husky": "^4.0.0",
    "jest": "24.9.0",
    "jest-date-mock": "^1.0.8",
    "jest-extended": "^0.11.2",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.2.1",
    "redux": "^4.0.5",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "typedoc": "^0.17.0-2",
    "typedoc-plugin-markdown": "^2.2.16",
    "typescript": "^3.7.4"
  },
  "lint-staged": {
    "src/**/*.ts(x)?": [
      "eslint",
      "git add"
    ]
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "diagnostics": true,
        "allowJs": true
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "rootDir": ".",
    "testRegex": ".(test|spec)\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "!**/*.d.(ts|tsx)",
      "!**/__mocks__/**/*.(ts|tsx)",
      "**/{!(main|index|serviceWorker|setupTests),}.(ts|tsx)"
    ],
    "coverageDirectory": "./coverage",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "setupFiles": [
      "jest-date-mock",
      "./jest.setup.ts"
    ],
    "setupFilesAfterEnv": [
      "./setupTests.ts"
    ]
  }
}
